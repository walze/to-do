datasource db {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id Int @default(autoincrement()) @id

  title   String
  content String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int


  tags Tag[]
}

model Tag {
  id    Int    @default(autoincrement()) @id
  value String @unique
  label String

  todos Todo[]
}

model User {
  id   Int    @default(autoincrement()) @id
  name String @unique

  Todo Todo[]
}
